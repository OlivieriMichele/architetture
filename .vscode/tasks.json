{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/nologo",
                "/Zi", // Aggiunge informazioni di debug
                "/Od", // Disabilita ottimizzazioni
                "/Fe${workspaceFolder}\\bin\\${fileBasenameNoExtension}.exe",
                "/Fo${workspaceFolder}\\bin\\${fileBasenameNoExtension}.obj",
                "${file}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}
